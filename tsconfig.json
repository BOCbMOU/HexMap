{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "lib": ["esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2019",
    // "resolveJsonModule": true,
  },
  "include": [
    "./*",
    "./.*",
    "src/**/*",
    "test/**/*",
    "test/.*",
  ],
  "exclude": ["node_modules"]
}
