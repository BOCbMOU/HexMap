[alias]
	rb = "!f() { git fetch && git rebase origin/HEAD; }; f"
	rbc = "rebase --continue"
	comall = "!f() { git add --all && git commit -m \""$1"\"; }; f"
	comnocheck = "!f() { git add --all && git commit -m \""$1"\" --no-verify; }; f"
	hpush = "push origin HEAD"
	fhpush = "push origin HEAD --force-with-lease"
	go = "checkout"
[merge]
	tool = vscode
[mergetool "vscode"]
	cmd = code --wait $MERGED
[diff]
	tool = vscode
[difftool "vscode"]
	cmd = code --wait --diff $LOCAL $REMOTE